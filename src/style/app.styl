.bar-chart .progress-track,
.bar-chart .progress-fill
  border-radius 3px
  box-shadow inset 0 0 5px rgba(0,0,0,.2)


.bar-chart .progress-bar
  float left
  height 90px
  width 20px
  margin-right 25px


.bar-chart .progress-track
  position relative
  width 20px
  height 100%
  background #ebebeb


.bar-chart .progress-fill
  position relative
  background #825
  height 0%
  top 100%
  width 20px
  color #fff
  text-align center
  font-family "Lato","Verdana",sans-serif
  font-size 12px
  line-height 20px
  -webkit-transition top 0.7s, height 0.7s
  transition top 0.7s, height 0.7s

